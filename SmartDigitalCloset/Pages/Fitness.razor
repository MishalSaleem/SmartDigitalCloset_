      private async Task ToggleInterest()
    {
        var email = await SessionStorage.GetItemAsync<string>("userEmail");
        if (string.IsNullOrEmpty(email))
            return;
            
        _isSaved = !_isSaved;
        
        if (_isSaved)
        {
            await InterestService.SaveInterestAsync(email, "Fitness");
        }
        else
        {
            await InterestService.RemoveInterestAsync(email, "Fitness");
        }
        
        StateHasChanged();
    }
